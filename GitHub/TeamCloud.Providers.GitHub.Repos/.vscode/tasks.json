{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean",
      "command": "dotnet",
      "args": [
        "clean",
        "${workspaceFolder}/TeamCloud.Providers.GitHub.Repos.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary",
      ],
      "type": "process",
      "problemMatcher": "$msCompile",
      "presentation": {
        "group": "teamcloudBuild",
        "showReuseMessage": false
      }
    },
    {
      "label": "build",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/TeamCloud.Providers.GitHub.Repos.csproj",
        // "--no-dependencies",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "type": "process",
      // "dependsOn": "clean",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile",
      "presentation": {
        "group": "teamcloudBuild",
        "showReuseMessage": false
      }
    },
    {
      "type": "func",
      "dependsOn": "build",
      "options": {
        "cwd": "${workspaceFolder}/bin/Debug/netcoreapp3.1"
      },
      "command": "start",
      "isBackground": true,
      "problemMatcher": "$func-watch",
      "presentation": {
        "group": "teamcloud",
        "showReuseMessage": false,
      }
    }
  ]
}
