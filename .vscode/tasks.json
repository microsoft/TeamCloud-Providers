{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "func",
            "dependsOn": "buildProj",
            "options": {
                "cwd": "${workspaceFolder}/${input:provider}/bin/Debug/netcoreapp3.1"
            },
            "command": "start",
            "isBackground": true,
            "problemMatcher": "$func-watch",
            "presentation": {
                "panel": "dedicated",
                "showReuseMessage": false
            }
        },
        {
            "label": "buildProj",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/${input:provider}",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "type": "process",
            "dependsOn": "cleanProj",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "group": "build",
                "showReuseMessage": false
            }
        },
        {
            "label": "cleanProj",
            "command": "dotnet",
            "args": [
                "clean",
                "${workspaceFolder}/${input:provider}",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "type": "process",
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "group": "build",
                "showReuseMessage": false
            }
        },
        {
            "label": "buildSln",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/TeamCloud.Providers.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "type": "process",
            "dependsOn": "cleanSln",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "group": "build",
                "showReuseMessage": false
            }
        },
        {
            "label": "cleanSln",
            "command": "dotnet",
            "args": [
                "clean",
                "${workspaceFolder}/TeamCloud.Providers.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "type": "process",
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "group": "build",
                "showReuseMessage": false
            }
        },
        {
            "label": "deleteTaskHub",
            "command": "func",
            "args": [
                "durable",
                "delete-task-hub",
                "--connection-string-setting",
                "DurableFunctionsHubStorage"
            ],
            "options": {
                "cwd": "${workspaceFolder}/${input:provider}"
            },
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "provider",
            "description": "Select a Provider",
            "options": [
                "Azure/TeamCloud.Providers.Azure.AppInsights",
                "Azure/TeamCloud.Providers.Azure.DevOps",
                "Azure/TeamCloud.Providers.Azure.DevTestLabs",
                "GitHub/TeamCloud.Providers.GitHub.Actions",
                "GitHub/TeamCloud.Providers.GitHub.Repos"
            ]
        }
    ]
}
